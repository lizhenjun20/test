<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_commom" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F4F4F4" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/selector_btn_next_bg"
                android:clickable="true" >
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="35dp"
                android:background="#444444" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_next_bg"
                android:src="@drawable/skin_image_ic_list_common_bar_header_editmode" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6ffffff" >

        <include layout="@layout/loading_layout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.anjoyo.view.LetterView
                android:id="@+id/letterView_fragment_local_music"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="60dp"
                android:visibility="invisible" />

            <com.anjoyo.view.AlphListview
                android:id="@+id/alphlistview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/letterView_fragment_local_music"
                android:scrollbars="@null" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>