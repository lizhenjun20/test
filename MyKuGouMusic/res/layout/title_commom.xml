<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_commom_height"
    android:background="@color/title_bg_color" >

    <ImageButton
        android:id="@+id/btnBack_title_commom"
        android:layout_width="@dimen/title_commom_height"
        android:layout_height="@dimen/title_commom_height"
        android:background="@drawable/selector_title_btn_bg"
        android:src="@drawable/ic_common_title_bar_back" 
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/btnMenu_title_commom"
        android:layout_width="@dimen/title_commom_height"
        android:layout_height="@dimen/title_commom_height"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_title_btn_bg"
        android:src="@drawable/ic_common_title_bar_menu" 
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/btnSearch_title_commom"
        android:layout_width="@dimen/title_commom_height"
        android:layout_height="@dimen/title_commom_height"
        android:layout_toLeftOf="@id/btnMenu_title_commom"
        android:background="@drawable/selector_title_btn_bg"
        android:src="@drawable/ic_common_title_bar_search"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvTitle_title_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"
        android:text="title" />

</RelativeLayout>